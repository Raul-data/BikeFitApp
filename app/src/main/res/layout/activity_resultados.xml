<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc_medidas">


    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESULTADOS"
                android:textColor="#FF8800"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="169dp"
                android:layout_marginBottom="16dp"/>


            <!-- Lista de resultados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#4D000000"
                android:padding="16dp"
                android:layout_marginHorizontal="8dp">

                <!-- A: Altura del sillín -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="A:"
                        android:textColor="#FF8800"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Altura"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:paddingStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_alturaSillin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69.0 cm"
                        android:textColor="#00BCD4"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"/>

                <!-- B: Retroceso del sillín -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="B:"
                        android:textColor="#FF8800"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Retroceso del sillín"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:paddingStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_retrocesoSillin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 cm"
                        android:textColor="#00BCD4"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"/>

                <!-- C: Altura manillar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="C:"
                        android:textColor="#FF8800"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Altura manillar"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:paddingStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_alturaSillinTijaManillar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 cm"
                        android:textColor="#00BCD4"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"/>

                <!-- D: Largo cuadro -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="D:"
                        android:textColor="#FF8800"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Largo cuadro"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:paddingStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_largoCuadro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="53.0 cm"
                        android:textColor="#00BCD4"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"/>

                <!-- E: Tija manillar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="E:"
                        android:textColor="#FF8800"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tija manillar"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:paddingStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_tijaManillar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 cm"
                        android:textColor="#00BCD4"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33FFFFFF"/>

                <!-- Sillín - Manillar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="SM:"
                        android:textColor="#FF8800"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sillín - Manillar"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:paddingStart="8dp"/>

                    <TextView
                        android:id="@+id/tv_sillinManillar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 cm"
                        android:textColor="#00BCD4"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Botón Comenzar/Volver -->
            <Button
                android:id="@+id/btn_comenzar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comenzar"
                android:textColor="#FFFFFF"
                android:backgroundTint="#9E7B4E"
                android:paddingHorizontal="64dp"
                android:paddingVertical="16dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="300dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>