<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc_medidas">

    <!-- ScrollView para permitir desplazamiento si el contenido es más grande que la pantalla -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Contenedor principal vertical -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <!-- Título de la pantalla -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESULTADOS"
                android:textColor="#FF8800"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="169dp"
                android:layout_marginBottom="16dp"/>

            <!-- Contenedor de la lista de resultados, con fondo semitransparente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#4D000000"
                android:padding="16dp"
                android:layout_marginHorizontal="8dp">

                <!-- Fila A: Altura del sillín -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <!-- Letra identificativa de la medida -->
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="A:"/>

                    <!-- Nombre de la medida -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Altura"/>

                    <!-- Valor calculado que se actualizará dinámicamente -->
                    <TextView
                        android:id="@+id/tv_alturaSillin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69.0 cm"/>
                </LinearLayout>

                <!-- Separador horizontal -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <!-- Fila B: Retroceso del sillín -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <!-- Letra identificativa -->
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="B:"/>

                    <!-- Nombre de la medida -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Retroceso del sillín"/>

                    <!-- Valor calculado dinámicamente -->
                    <TextView
                        android:id="@+id/tv_retrocesoSillin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 cm"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"/>

                <!-- Fila C: Altura del manillar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="C:"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Altura manillar"/>

                    <TextView
                        android:id="@+id/tv_alturaSillinTijaManillar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 cm"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"/>

                <!-- Fila D: Largo del cuadro -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="D:"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Largo cuadro"/>

                    <TextView
                        android:id="@+id/tv_largoCuadro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="53.0 cm"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"/>

                <!-- Fila E: Tija manillar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:text="E:"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tija manillar"/>

                    <TextView
                        android:id="@+id/tv_tijaManillar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 cm"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp"/>

                <!-- Fila SM: Distancia entre sillín y manillar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="SM:"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sillín - Manillar"/>

                    <TextView
                        android:id="@+id/tv_sillinManillar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 cm"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Botón para volver o comenzar de nuevo -->
            <Button
                android:id="@+id/btn_comenzar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comenzar"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
